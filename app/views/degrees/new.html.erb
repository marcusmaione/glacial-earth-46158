<div class="container col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="form-box">

   <h5>Incluir diploma:</h5>

   <%= simple_form_for(@degree) do |f| %>
     <%= f.input :level, collection: Degree::DEGREELEVELS, :label => "Nível de escolaridade:" %>
     <%= f.input :school_name, :label => "Nome da escola/instituição:" %>
     <%= f.input :field, hint: "Apenas para Ensino Superior", :label => "Curso:" %>
     <%= f.input :complete, as: :boolean, :label => "Completo?" %>

   <div class="form-actions">
     <%= f.submit class: 'btn btn-primary', value: "Incluir" %>
   </div>
   <% end %>

   <p>Você pode incluir mais diplomas depois se quiser.</p>

  </div>
</div>
