<div class="container col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="form-box">

    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to icon('fab', 'facebook') + " Continuar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-primary btn-facebook" %>
      <% end %>
    <% end %>

    <h5>Continuar com e-mail:</h5>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

        <%= f.input :first_name,
                    autofocus: true,
                    required: true,
                    :label => "Nome:" %>
        <%= f.input :last_name,
                    required: true,
                    :label => "Sobrenome:" %>
        <%= f.input :phone,
                    required: true,
                    hint: "Incluir DDD. Exemplo: 21912345678. Inserir apenas os números, sem pontos ou traços.",
                    :label => "Celular:" %>
        <%= f.input :address,
                    required: true,
                    hint: "IMPORTANTE: Apenas rua e número.",
                    :label => "Endereço (rua e número):" %>
        <%= f.input :address_complement,
                    hint: "Apto, bloco, casa, etc.",
                    :label => "Complemento:" %>
        <%= f.input :cpf,
                    required: true,
                    hint: "Necessário para evitar cadastro duplicado. Inserir apenas os números, sem pontos ou traços.",
                    :label => "CPF:" %>
        <%= f.input :email,
                    required: true,
                    input_html: { autocomplete: "email" },
                    :label => "E-mail:" %>
        <%= f.input :password,
                    required: true,
                    hint: ("No mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" },
                    :label => "Criar uma senha:" %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    :label => "Confirmar a senha:" %>

      <div class="form-actions">
        <%= f.submit class: 'btn btn-primary', value: "Confirmar" %>
      </div>
    <% end %>

      <p>Já é cadastrado?</p>
      <%= link_to "Entrar", new_user_session_path, class: 'btn btn-secondary' %>

  </div>
</div>
