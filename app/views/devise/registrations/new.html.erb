<div class="container col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="form-box">

    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to icon('fab', 'facebook') + " Continuar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-primary btn-facebook" %>
      <% end %>
    <% end %>

    <h5>Continuar com e-mail:</h5>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    :label => "E-mail:" %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} caracteres no mínimo" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" },
                    :label => "Criar uma senha:" %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    :label => "Confirmar a senha:" %>
        <%= f.input :first_name,
                    :label => "Nome:" %>
        <%= f.input :last_name,
                    :label => "Sobrenome:" %>
        <%= f.input :phone,
                    hint: "Incluir DDD. Exemplo: (21)99999-9999",
                    :label => "Celular:" %>
        <%= f.input :avatar, :label => "Incluir uma foto de perfil:" %>
        <%= f.input :avatar_cache, as: :hidden %>

      </div>

      <div class="form-actions" style="text-align: center">
        <%= f.submit class: 'btn btn-primary', value: "Entrar" %>
      </div>
    <% end %>

    <div class="login-signup">
      <p>Já é cadastrado?</p>
      <%= link_to "Entrar.", new_user_session_path %>
    </div>

  </div>
</div>
