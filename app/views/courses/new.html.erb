<div class="container col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="form-box">

   <h5>Incluir curso:</h5>

   <%= simple_form_for(@course) do |f| %>
     <%= f.input :category, collection: Course::COURSECATEGORIES, :label => "Tipo de curso:" %>
     <%= f.input :school_name, :label => "Nome do curso/instituição:" %>
     <%= f.input :description, hint: "Ex.: inglês nível intermediário", :label => "Descrição:" %>
     <%= f.input :complete, as: :boolean, :label => "Completo?" %>

   <div class="form-actions">
     <%= f.submit class: 'btn btn-primary', value: "Incluir" %>
   </div>
   <% end %>

   <p>Você pode incluir mais cursos depois se quiser.</p>

   <%= link_to "Pular esta etapa", edit_user_registration_path, class: "btn btn-secondary" %>

  </div>
</div>
