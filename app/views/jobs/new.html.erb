<div class="container col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="form-box">

   <h5>Criar vaga:</h5>

   <%= simple_form_for [@company, @job] do |f| %>
     <%= f.input :title,
                 required: true,
                 collection: Job::JOBPOSITIONS,
                 :label => "Cargo:" %>
     <%= f.input :sector,
                 required: true,
                 collection: Job::JOBSECTORS,
                 :label => "Setor do cargo:" %>
     <%= f.input :level,
                 required: true,
                 collection: Experience::EXPERIENCELEVELS,
                 :label => "Experiência desejada:" %>
     <%= f.input :education_requirement,
                 required: true,
                 collection: Degree::DEGREELEVELS,
                 :label => "Educação desejada:" %>
     <%= f.input :salary_range,
                 required: true,
                 collection: Job::SALARYRANGES,
                 :label => "Faixa salarial:" %>
     <%= f.input :benefit,
                 hint: "VT, VR, seguro saúde, etc.",
                 :label => "Benefícios:" %>
     <%= f.input :description,
                 hint: "Breve descrição das atividades",
                 :label => "Descrição:" %>

   <div class="form-actions">
     <%= f.submit class: 'btn btn-primary', value: "Confirmar" %>
   </div>
   <% end %>

   <p>Você pode criar mais vagas depois se quiser.</p>

  </div>
</div>
