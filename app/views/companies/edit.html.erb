<div class="container col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="form-box">

    <h5>Editar empresa:</h5>

    <%= simple_form_for(@company) do |f| %>

        <%= f.input :name,
                    required: true,
                    :label => "Nome da empresa:" %>
        <%= f.input :sector,
                    required: true,
                    :label => "Setor da empresa:",
                    collection: Company::COMPANYSECTORS %>
        <%= f.input :phone,
                    required: true,
                    hint: "Incluir DDD. Exemplo: (21)99999-9999.",
                    :label => "Telefone:" %>
        <%= f.input :address,
                    required: true,
                    hint: "IMPORTANTE: Apenas rua e número.",
                    :label => "Endereço (rua e número):" %>
        <%= f.input :address_complement,
                    hint: "Bloco, andar, sala, etc.",
                    :label => "Complemento:" %>

    <div class="form-actions">
      <%= f.submit class: 'btn btn-primary', value: "Confirmar" %>
    </div>
  <% end %>
      <br>
      <%= link_to "Voltar", profile_path, class: "btn btn-tertiary btn-sm" %>
      <br>
      <% if policy(@company).destroy? %>
        <%= link_to "Deletar esta empresa", company_path(@company),
            method: :delete, class: "edit-remove" %>
      <% end %>
  </div>
</div>
