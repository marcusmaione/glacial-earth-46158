<div class="container col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="form-box">

   <h5>Cadastrar empresa:</h5>

   <%= simple_form_for(@company) do |f| %>
     <%= f.input :name, required: true, :label => "Nome da empresa:" %>
     <%= f.input :sector, required: true, collection: Company::COMPANYSECTORS, :label => "Setor:" %>
     <%= f.input :address, required: true, :label => "Endereço completo:" %>
     <%= f.input :phone, required: true, :label => "Telefone:" %>

   <div class="form-actions">
     <%= f.submit class: 'btn btn-primary', value: "Confirmar" %>
   </div>
   <% end %>

   <p>Você pode cadastrar mais empresas depois se quiser.</p>

  </div>
</div>
