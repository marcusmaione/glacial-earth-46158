<h5>Cursos:</h5>

<div class="degrees-box">
  <% @courses.each do |course| %>
    <div class="degree-box">
      <p><%= course.category %>: <%= course.school_name %></p>
      <p>Descrição: <%=  course.description %></p>
      <% if course.complete == "1" %>
        <p>Completo</p>
      <% else %>
        <p>Incompleto</p>
      <% end %>
      <div class="edit-box">
        <%= link_to "Editar", edit_course_path(course), class: "edit-remove" %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Incluir curso", new_course_path, class: "btn btn-secondary btn-sm" %>
