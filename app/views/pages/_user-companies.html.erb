<h5>Empresas:</h5>

<div class="degrees-box">
  <% @companies.each do |company| %>
    <div class="degree-box">

      <div class="complete-company-box">
        <% if company.company_incomplete? %>
          <h5>VocÃª precisa completar o perfil dessa empresa para que possamos te conectar com os candidatos.</h5>
          <%= link_to "Completar empresa", edit_company_path(company), class: "btn btn-primary btn-complete-company" %>
        <% else %>
        <% end %>
      </div>

      <p style="font-weight: 900"><%= company.name %> </p>
      <p>Setor: <%= company.sector %></p>
      <p><i class="fas fa-phone"></i> <%= company.phone %></p>
      <p><i class="fas fa-home"></i> <%= company.address %></p>
      <% if company.address_complement.nil? %>
      <% else %>
       <p>Complemento: <%= company.address_complement %></p>
      <% end %>
      <p><i class="fas fa-city"></i> <%= company.company_city %></p>
      <div class="edit-create-box">
        <%= link_to "Vagas", company_jobs_path(company), class: "btn btn-create-job" %>
        <%= link_to "Editar", edit_company_path(company), class: "edit-remove" %>
      </div>

    </div>
  <% end %>
</div>

<%= link_to "Incluir empresa", new_company_path, class: "btn btn-secondary btn-sm" %>
