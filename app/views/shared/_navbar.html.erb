<div class="navbar-header navbar-expand-sm navbar-light">

  <div class="nav-left">
    <%= link_to root_path, class: "navbar-brand" do %>
      <h5>Pontful</h5>
    <% end %>
  </div>

  <div>
    <ul class="navbar-nav mr-auto nav-right">
      <% if user_signed_in? %>
        <li class="dropdown">

          <% avatar_url = current_user.facebook_picture_url %>
          <% if avatar_url %>
            <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= cl_image_tag current_user.avatar, :height=>300, :width=>300, :crop=>"fill", :gravity=>"face",class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", "/profile", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
        <% else %>
        <li>
          <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="navbutton">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>

</div>
